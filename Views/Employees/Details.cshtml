@model AssetTracker.Web.Models.Entities.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-person-fill me-2"></i>
            <h5 class="mb-0">Employee Details</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EmployeeNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployeeNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Department)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
        </div>
    </div>
</div>
