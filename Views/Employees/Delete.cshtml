@model AssetTracker.Web.Models.Entities.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <h5 class="mb-0">Delete Employee</h5>
        </div>
        <div class="card-body">
            <h6 class="text-danger mb-3">Are you sure you want to delete this employee? This action cannot be undone.</h6>
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Department)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <form asp-action="Delete" method="post" class="mb-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>
