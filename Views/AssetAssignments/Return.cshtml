@model AssetTracker.Web.Models.Entities.AssetAssignment

@{
    ViewData["Title"] = "Return Asset";
}

<h1>Return Asset</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Return" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConditionAtReturn" class="control-label"></label>
                <input asp-for="ConditionAtReturn" class="form-control" />
                <span asp-validation-for="ConditionAtReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mark as Returned" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
