@model AssetTracker.Web.Models.Entities.AssetAssignment

@{
    ViewData["Title"] = "Return Asset";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-box-arrow-in-left me-2"></i>
            <strong>Return Asset</strong>
        </div>
        <div class="card-body">
            <form asp-action="Return" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="ReturnDate" class="form-label"></label>
                    <input asp-for="ReturnDate" class="form-control" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConditionAtReturn" class="form-label"></label>
                    <input asp-for="ConditionAtReturn" class="form-control" />
                    <span asp-validation-for="ConditionAtReturn" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Mark as Returned
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
