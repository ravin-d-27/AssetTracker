@model AssetTracker.Web.Models.Entities.AssetAssignment

@{
    ViewData["Title"] = "Edit Assignment";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-pencil-square me-2"></i>
            <h5 class="mb-0">Edit Assignment</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="AssetId" class="form-label">Asset Type</label>
                    <select asp-for="AssetId" class="form-select" asp-items="ViewBag.AssetId"></select>
                    <span asp-validation-for="AssetId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label">Employee Name</label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedDate" class="form-label">Assigned Date</label>
                    <input asp-for="AssignedDate" class="form-control" />
                    <span asp-validation-for="AssignedDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConditionAtReturn" class="form-label">Condition at Return</label>
                    <input asp-for="ConditionAtReturn" class="form-control" />
                    <span asp-validation-for="ConditionAtReturn" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
