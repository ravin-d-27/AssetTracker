@model AssetTracker.Web.Models.Entities.Asset

@{
    ViewData["Title"] = "Add New Asset";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-plus-circle-fill me-2"></i>
            <h5 class="mb-0">Add New Asset</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Asset Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="">-- Select Asset Type --</option>
                        <option>Accessories</option>
                        <option>HeadPhone</option>
                        <option>iPad</option>
                        <option>Keyboard</option>
                        <option>Laptop</option>
                        <option>Mobile Phone</option>
                        <option>Monitor</option>
                        <option>Mouse</option>
                        <option>Tablet</option>
                        <option>Others</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model" class="form-label">Asset Name</label>
                    <input asp-for="Model" class="form-control" placeholder="e.g., Dell XPS 13, HP ProDisplay" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SerialNumber" class="form-label">Serial Number</label>
                    <input asp-for="SerialNumber" class="form-control" placeholder="Unique serial number" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
                    <input asp-for="PurchaseDate" type="date" class="form-control" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="">-- Select Status --</option>
                        <option>Available</option>
                        <option>Assigned</option>
                        <option>Under Service</option>
                        <option>Not Working</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>


                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
