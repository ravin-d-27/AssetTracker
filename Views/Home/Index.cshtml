@{
    ViewData["Title"] = "Welcome to Asset Tracker";
}

<div class="container py-5">
    <!-- Hero section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark mb-3">
            <i class="bi bi-box-seam"></i> Asset Tracker
        </h1>
        <p class="lead text-secondary">
            Track, manage, and simplify your organizational assets — all in one place.
        </p>
    </div>

    <!-- Features -->
    <div class="row text-center mb-5">
        <div class="col-md-4 mb-4">
            <i class="bi bi-hdd-stack fs-1 text-primary mb-2"></i>
            <h5 class="fw-semibold">All Assets in One View</h5>
            <p class="text-muted small">Effortlessly register and monitor assets, from laptops to tools, in real time.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-people fs-1 text-primary mb-2"></i>
            <h5 class="fw-semibold">Employee Assignments</h5>
            <p class="text-muted small">Track who has which asset, with clear assignment and return history.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-bar-chart-line fs-1 text-primary mb-2"></i>
            <h5 class="fw-semibold">Actionable Insights</h5>
            <p class="text-muted small">Gain visibility into asset utilization, conditions, and lifecycle decisions.</p>
        </div>
    </div>

    <!-- Why use -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <h4 class="fw-semibold mb-3">
                <i class="bi bi-lightbulb text-primary me-1"></i> Why Choose Asset Tracker?
            </h4>
            <p class="text-muted mb-2">
                Move beyond spreadsheets. Streamline asset tracking, reduce errors, and make data-driven decisions effortlessly.
            </p>
            <p class="text-muted small">
                Ideal for IT teams, small businesses, schools — anyone who wants control over their assets.
            </p>
        </div>
    </div>

    <!-- Call to action -->
    <div class="text-center mb-4">
        <a asp-area="" asp-controller="Assets" asp-action="Index" class="btn btn-primary btn-lg px-4 shadow-sm">
            <i class="bi bi-arrow-right-circle me-2"></i> Get Started
        </a>
    </div>

    <!-- Footer note -->
    <div class="text-center text-muted small">
        &copy; 2025 Asset Tracker. Minimal design, maximum clarity.
    </div>
</div>
